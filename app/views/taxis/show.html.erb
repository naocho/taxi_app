<div class="contents row">
  <div class="content_post">
   <%= image_tag @taxi.image,class: "item-img" %>
    <% if user_signed_in? && current_user.id == @taxi.user_id %>
    <div class="more">
      <span><%= image_tag 'arrow_top.png' %></span>
      <ul class="more_list">
        <li>
          <%= link_to '編集', edit_taxi_path(@taxi.id), method: :get %>
        </li>
        <li>
          <%= link_to '削除', taxi_path(@taxi.id), method: :delete %>
        </li>
      </ul>
    </div>
    <% end %>
    <p><%= @taxi.title %></p>
   <span class="name">
      <a href="/users/<%= @taxi.user.id %>">
        <span>投稿者</span><%= @taxi.user.nickname %>
      </a>
    </span>
  </div>
  <div class="container">
  <h4>＜出発場所＞</h4><%=@taxi.departure %>
  <h4>＜到着場所＞</h4><%=@taxi.arrival %>
  <h4>＜評価＞</h4><%=@taxi.text %>
  </div>
  <div class="container">
    <% if current_user %>
      <%= form_with(model: [@taxi, @comment], local: true) do |form| %>
        <%= form.text_area :text, placeholder: "コメントする", rows: "2" %>
        <%= form.submit "SEND" %>
      <% end %>
    <% else %>
      <strong><p>※※※ コメントの投稿には新規登録/ログインが必要です ※※※</p></strong>
    <% end %>
    <div class="comments">
      <h4>＜コメント一覧＞</h4>
      <% if @comments %>
        <% @comments.each do |comment| %>
          <p>
            <strong><%= link_to comment.user.nickname, "/users/#{comment.user_id}" %>：</strong>
            <%= comment.text %>
          </p>
        <% end %>
      <% end %>
    </div>
  </div>
</div>