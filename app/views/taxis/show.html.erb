<div class="contents row">
  <div class="content_post" style="background-image: url(<%= @taxi.image %>);">
    <% if user_signed_in? && current_user.id == @taxi.user_id %>
    <div class="more">
      <span><%= image_tag 'arrow_top.png' %></span>
      <ul class="more_list">
        <li>
          <%= link_to '編集', edit_taxi_path(@taxi.id), method: :get %>
        </li>
        <li>
          <%= link_to '削除', taxi_path(@taxi.id), method: :delete %>
        </li>
      </ul>
    </div>
    <% end %>
    <p><%= @taxi.text %></p>
    <span class="name"><%= @taxi.name %>
    </span>
  </div>
</div>